<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MobileClosetTheme" parent="@style/Theme.Sherlock.Light">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:actionBarStyle">@style/MobileClosetTheme.ActionBarStyle</item>
    </style>

    <style name="MobileClosetTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/actionBarYellow</item>
        <item name="android:titleTextStyle">@style/MobileClosetTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MobileClosetTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionBarBlue</item>
    </style>

</resources>